# Build stage
FROM golang:1.25-alpine AS builder

WORKDIR /workspace

# Set Go proxy with multiple fallbacks for reliability
ENV GOPROXY=https://goproxy.cn,https://goproxy.io,https://proxy.golang.org,direct

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY api/ api/
COPY pkg/sidecar/ pkg/sidecar/
COPY pkg/execagent/ pkg/execagent/
COPY pkg/pb/ pkg/pb/
COPY cmd/sidecar/ cmd/sidecar/

# Build
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o sidecar cmd/sidecar/main.go

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates python3 py3-pip bash

WORKDIR /app

COPY --from=builder /workspace/sidecar .

RUN mkdir -p /workspace

EXPOSE 8080 9090

ENTRYPOINT ["/app/sidecar"]
CMD ["--workspace=/workspace", "--http-port=8080", "--grpc-port=9090"]
