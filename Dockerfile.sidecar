# Build stage
FROM golang:1.25-alpine AS builder

WORKDIR /workspace

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY api/ api/
COPY pkg/sidecar/ pkg/sidecar/
COPY cmd/sidecar/ cmd/sidecar/

# Build
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o sidecar cmd/sidecar/main.go

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates python3 py3-pip bash

WORKDIR /app

COPY --from=builder /workspace/sidecar .

RUN mkdir -p /workspace

EXPOSE 8080

ENTRYPOINT ["/app/sidecar"]
CMD ["--workspace=/workspace", "--port=8080"]
